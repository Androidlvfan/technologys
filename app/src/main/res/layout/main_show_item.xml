<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/show_item_icon"
            android:layout_width="140dp"
            android:layout_height="92dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/show_item_title"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:text="111111"
            android:textSize="14sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/show_item_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111111"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/show_item_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textSize="10sp"
                android:textColor="#999"
                />
            <CheckBox
                android:id="@+id/sellect_cb"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/sellect"
                />
            <TextView
                android:id="@+id/sellect_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                />
            <CheckBox
                android:id="@+id/share_cb"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:button="@null"
                android:background="@drawable/share"
                />
            <TextView
                android:id="@+id/share_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>