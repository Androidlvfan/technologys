<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:orientation="vertical"
    tools:context=".ui.activity.TechStartActivity">

    <ImageView
        android:id="@+id/start_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="154dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/logo_xhdpi"
        />

    <TextView
        android:id="@+id/start_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="236dp"
        android:textSize="36dp"
        android:textColor="#ffffff"
        android:text="维度科技"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="WEIDU KEJI"/>

    <TextView
        android:id="@+id/start_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:textSize="@dimen/sp_14"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:text="八维移动通信学院作品"/>



</LinearLayout>