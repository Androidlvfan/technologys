<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:orientation="vertical"
    android:id="@+id/raw"
    tools:context=".ui.activity.TechLoginActivity">


    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:background="@null"
        android:inputType="number"
        android:drawableLeft="@mipmap/login_icon_phone_n_xhdpi"
        android:drawableBottom="@drawable/edit_shape"
        android:drawablePadding="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_40"
        android:hint="手机号"
        android:maxLines="1"
        android:textColor="#ddd"
        android:padding="20dp"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="@dimen/dp_40"
        android:drawableLeft="@mipmap/login_icon_lock_n_xhdpi"
        android:drawableRight="@mipmap/login_icon_eye_n_xhdpi"
        android:layout_marginRight="@dimen/dp_40"
        android:drawableBottom="@drawable/edit_shape"
        android:drawablePadding="@dimen/dp_10"
        android:hint="登录密码"
        android:password="true"
        android:maxLines="1"
        android:textColor="#ddd"
        android:padding="20dp"
        android:textColorHint="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:clickable="true"
            android:padding="20dp"
            android:text="快速注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>



    <Button
        android:id="@+id/btn_login"
        android:layout_width="280dp"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="135dp"
        android:background="@drawable/yuanjiao"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal">
        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_10"
            android:text="第三方账号快速登录"/>

        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="@dimen/dp_40">


        <ImageView
            android:id="@+id/wx_login"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="120dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/common_icon_weixin_n_xhdpi"/>

        <ImageView
            android:id="@+id/ren_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="120dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/login_icon_artigence_xhdpi"/>

    </RelativeLayout>



</LinearLayout>