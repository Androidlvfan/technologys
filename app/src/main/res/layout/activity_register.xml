<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegisterActivity"
    android:background="@mipmap/regbgtwo">


    <ImageView
        android:id="@+id/reg_imglogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/reglogo"
        android:layout_marginTop="108dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/relaone"
        android:layout_below="@id/reg_imglogo"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/reg_imgname"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_icon_name_n"/>
        <EditText
            android:id="@+id/edit_reg_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/reg_imgname"
            android:background="@android:color/transparent"
            android:hint="昵称"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />
    </RelativeLayout>
    <View
        android:id="@+id/viewone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_below="@+id/relaone"
        android:layout_marginRight="36dp"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/relatwo"
        android:layout_below="@id/viewone"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/reg_imgphone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_icon_phone_n"/>
        <EditText
            android:id="@+id/edit_reg_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/reg_imgphone"
            android:background="@android:color/transparent"
            android:hint="手机号"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />
    </RelativeLayout>
    <View
        android:id="@+id/viewtwo"
        android:layout_below="@id/relatwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/relaonethree"
        android:layout_below="@id/viewtwo"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/reg_imglock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_icon_lock_n"/>
        <EditText
            android:id="@+id/edit_reg_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/reg_imglock"
            android:background="@android:color/transparent"
            android:hint="登录密码"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />
    </RelativeLayout>
    <View
        android:id="@+id/viewthree"
        android:layout_below="@id/relaonethree"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/relaonefour"
        android:layout_below="@id/viewthree"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/reg_imgyz"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/register_icon_lock_n"/>
        <EditText
            android:id="@+id/edit_reg_yz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/reg_imgyz"
            android:background="@android:color/transparent"
            android:hint="验证码 "
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />
        <TextView
            android:id="@+id/reg_btyz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信验证注册"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />
    </RelativeLayout>
    <View
        android:id="@+id/viewfour"
        android:layout_below="@+id/relaonefour"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:text="注册"
        android:textSize="18sp"
        android:background="@drawable/bg_shoap"
        android:textColor="@android:color/white"/>
</RelativeLayout>