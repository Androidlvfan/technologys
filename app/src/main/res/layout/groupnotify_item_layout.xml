<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/addGroupRequestRecyclerItem_time"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#d7d7d7"
            android:gravity="center"
            android:text="上午6:30"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/linear_shape"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/addGroupRequestRecyclerItem_headImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/addGroupRequestRecyclerItem_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="张三"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp">


            <TextView
                android:id="@+id/addGroupRequestRecyclerItem_beizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="邀请你进入该群"
                android:visibility="gone"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/addGroupRequestRecyclerItem_alreadyAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="已同意"
                android:visibility="gone" />

            <TextView
                android:id="@+id/addGroupRequestRecyclerItem_alreadyNoAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="已拒绝"
                android:visibility="gone" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/addGroupRequestRecyclerItem_bottomLinear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/addGroupRequestRecyclerItem_agreeBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/leftbottom_shape"
                android:gravity="center"
                android:text="同意"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/addGroupRequestRecyclerItem_NoAgreeBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rightbottom_shape"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>